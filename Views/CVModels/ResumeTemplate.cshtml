@model Assignment3_NilavarasuKumar.Models.CVModel
@{
    ViewData["Title"] = "ResumeTemplate";
}
@{
    Layout = ViewBag.UseLayout != null && !(bool)ViewBag.UseLayout ? null : "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            line-height: 1.6;
            background: #f7f7f7;
        }
        .container {
            max-width: 800px;
            margin: 30px auto;
            background: #fff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1, h2, h3 {
            color: #333;
        }
        .header {
            text-align: center;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .header h1 {
            font-size: 2.5em;
            margin: 0;
        }
        .header p {
            margin: 5px 0;
            font-size: 1.1em;
            color: #666;
        }
        .section {
            margin-bottom: 20px;
        }
        .section h2 {
            background: #007BFF;
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 1.5em;
        }
        .section ul {
            list-style: none;
            padding: 0;
        }
        .section ul li {
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        .section ul li:last-child {
            border-bottom: none;
        }
        .section p {
            margin: 5px 0;
        }
        .footer {
            text-align: center;
            font-size: 0.9em;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@Model.FullName</h1>
            <p>@Model.Email | @Model.ContactNumber</p>
            <p>@Model.Address</p>
        </div>

        <div class="section">
            <h2>Professional Summary</h2>
            <p>@Model.ProfessionalSummary</p>
        </div>

        @if (Model.WorkExperiences.Any())
        {
            <div class="section">
                <h2>Work Experience</h2>
                <ul>
                    @foreach (var experience in Model.WorkExperiences)
                    {
                        <li>
                            <strong>@experience.CompanyName</strong> - <em>@experience.JobTitle</em>
                            <br />
                            <span>@experience.StartDate?.ToString("MMM yyyy") - @experience.EndDate?.ToString("MMM yyyy")</span>
                            <p>@experience.JobDescription</p>
                        </li>
                    }
                </ul>
            </div>
        }

        @if (Model.Skills.Any())
        {
            <div class="section">
                <h2>Skills</h2>
                <ul>
                    @foreach (var skill in Model.Skills)
                    {
                        <li>@skill.SkillName</li>
                    }
                </ul>
            </div>
        }

        @if (Model.EducationList.Any())
        {
            <div class="section">
                <h2>Education</h2>
                <ul>
                    @foreach (var education in Model.EducationList)
                    {
                        <li>
                            <strong>@education.InstitutionName</strong> - @education.Degree
                            <br />
                            <span>@education.GraduationDate?.ToString("yyyy")</span>
                        </li>
                    }
                </ul>
            </div>
        }

        @if (Model.Languages.Any())
        {
            <div class="section">
                <h2>Languages</h2>
                <ul>
                    @foreach (var language in Model.Languages)
                    {
                        <li>@language.LanguageName</li>
                    }
                </ul>
            </div>
        }

        <div class="footer">
            <p>Generated by CVista✨</p>
        </div>
    </div>
</body>
</html>
